<form id="autostartPrint_plugin_settings" class="form-horizontal" >

    <h3>AutostartPrint settings</h3>

    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: pluginSettings.activated" > Activated
            </label>
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: pluginSettings.deactivateAfterSuccessful" > Deactivate after successful print
            </label>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Trigger for starting:</label>
        <div class="controls">
            <label class="radio">
                <input type="radio" name="startTriggerMode" value="connection" data-bind="checked: pluginSettings.startTriggerMode"> &nbsp;&nbsp;after the printer is connected with OctoPrint
            </label>
            <label class="radio">
                <input type="radio" name="startTriggerMode" value="operational" data-bind="checked: pluginSettings.startTriggerMode"> &nbsp;&nbsp;after the printer is changed to "Operation"-State (could be used for endless printing)<br>
                <code>THIS IS ALSO DONE AFTER A PRINT IS FINISHED!!!</code>
            </label>
        </div>
    </div>

    <div class="control-group" >
        <label class="control-label">Startime delay:</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="any" min="0" class="input-mini text-right"
                       data-bind="value: pluginSettings.startPrintDelay" >
                <span class="add-on">seconds</span>
            </div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Selected file:</label>
        <div class="controls">
            <label class="radio">
                <input type="radio" name="fileSelectionMode" value="sdcard" data-bind="checked: pluginSettings.fileSelectionMode"> &nbsp;&nbsp;newest uploaded file from <b>Printer SD-Card</b>
            </label>
            <label class="radio">
                <input type="radio" name="fileSelectionMode" value="local" data-bind="checked: pluginSettings.fileSelectionMode"> &nbsp;&nbsp;newest uploaded file from <b>local OctoPrintServer</b>
            </label>
            <label class="radio">
                <input type="radio" name="fileSelectionMode" value="local-next" data-bind="checked: pluginSettings.fileSelectionMode"> &nbsp;&nbsp;Next uploaded file from <b>local OctoPrintServer</b>
            </label>
        </div>
    </div>


    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: pluginSettings.includeSubFolders" > Include sub folders
            </label>
        </div>
    </div>

</form>
